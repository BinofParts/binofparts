
<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "col-sm-5 col-md-4 col-lg-3 center-block"}) do |f| %>
	<div class="form-group">
		<%= f.email_field :email, :placeholder => "Email", :class => "form-control", :required => true, :autofocus => true %>
	</div>

	<div class="form-group">
		<%= f.password_field :password, :placeholder => "Password", :class => "form-control", :required => true %>
	</div>

	  <% if devise_mapping.rememberable? -%>
	  	<div class="checkbox">
	    	<%= f.check_box :remember_me %> <%= f.label :remember_me %>
	  	</div>
	  <% end -%>

	  <div><%= f.submit "Sign in", :class => "btn btn-success pull-right" %></div>
<% end %>

<%= render "devise/shared/links" %>
