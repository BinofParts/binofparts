<% content_for :title, "- Teams" %>
<div class="container">

<div class="row">
  <%= will_paginate @teams %>
</div>
<div class="row">
  <% @teams.in_groups_of(300).each do |teams_array| %>
  <div class="col-xs-12 col-sm-6 col-lg-6">
    <table class="table table-striped table-condensed table-center ">
      <thead>
        <tr>
          <th><%= sortable "team_number", "#" %></th>
          <th><%= sortable "nickname", "Name" %></th>
          <th><%= sortable "location", "Location" %></th>
        </tr>
      </thead>
      <tbody>
        <% teams_array.each do |team| %>
        <% if team.presence %>
          <tr>
            <td><%= link_to team.team_number, team_path(:id => team.team_number) %></td>
            <td><%= link_to team.nickname.presence || '--', team_path(:id => team.team_number) %></td>
            <td><%= team.location.presence || '--' %></td>
          </tr>
        <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
  <% end %>
</div>
</div>