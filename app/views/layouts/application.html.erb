<!DOCTYPE html>
<html>
<head>
  <title>Bin of Parts <%= yield(:title) %></title>
  <%= stylesheet_link_tag params[:controller], "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag params[:controller], "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="bop-navbar navbar navbar-default navbar-fixed-top" role="navigation">
	<div class="container">
		<div class="navbar-header">
		    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
		      <span class="sr-only">Toggle navigation</span>
		      <span class="icon-bar"></span>
		      <span class="icon-bar"></span>
		      <span class="icon-bar"></span>
		    </button>
		    <a class="navbar-brand hidden-sm" href="/"><%= image_tag "bop-logo-beta-full.png" %></a>
		    <a class="navbar-brand visible-sm" href="/"><%= image_tag "bop-logo-small.png" %></a>
		</div>
		<% if user_signed_in? %>
		<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
	    	<ul class="nav navbar-nav">
	        	<li><a href="/inventory">Inventory</a></li>
	            <li><%= link_to 'Kit of Parts', kop_path  %></li>
	            <li><%= link_to 'Teams', teams_path  %></li>
	            <li><%= link_to 'Events', events_path  %></li>
	        </ul>
          	<ul class="nav navbar-nav navbar-right">
              	<li class="dropdown">
                	<a href="" class="dropdown-toggle" data-toggle="dropdown"><%= current_user.email %> <b class="caret"></b></a>
	                <ul class="dropdown-menu">
	                    <li><a href="/myteam">My Team</a></li>
	                    <li><a href="/settings">Settings</a></li>
	                <li class="divider"></li>
	                    <li><%= link_to 'Logout', destroy_user_session_path, :method => :delete %></li>
	                </ul>
              	</li>
          	</ul>
	    </div>
		<% else %>
		<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
		    <ul class="nav navbar-nav">
		    	<li><%= link_to 'Kit of Parts', kop_path  %></li>
	            <li><%= link_to 'Teams', teams_path  %></li>
	            <li><%= link_to 'Events', events_path  %></li>
		    </ul>
		    <ul class="nav navbar-nav navbar-right">
		    	<li><%= link_to 'Login', new_user_session_path  %></li>
		    </ul>
		</div>
		<% end %>
	</div>
</nav>
<div class="content">
	<%= yield %>
</div>
<div id="footer">
	<div class="footer col-xs-4 col-sm-8 col-md-6 col-xs-offset-4 col-sm-offset-2 col-md-offset-3">
			<div class="col-sm-6 hidden-xs section" id="links">
				<%= link_to 'Blog', "http://blog.binofparts.com" %> &middot;
				<% if user_signed_in? %>
				<%= link_to 'About', home_path %> &middot;
				<% end %>
				<%= link_to 'Facebook', "https://facebook.com/binofparts" %> &middot;
				<%= link_to 'Twitter', "https://twitter.com/binofparts" %>
				<p>&copy; Bin of Parts, Inc</p>
			</div>
			<div class="col-sm-6 visible-xs section" id="links-xs">
				<%= link_to 'Blog', "http://blog.binofparts.com" %> &middot;
				<% if user_signed_in? %>
				<%= link_to 'About', home_path %> &middot;
				<% end %>
				<%= link_to 'Facebook', "https://facebook.com/binofparts" %> &middot;
				<%= link_to 'Twitter', "https://twitter.com/binofparts" %>
			</div>
			<div class="col-sm-3 section" id="mixpanel">
				<%= link_to image_tag('//cdn.mxpnl.com/site_media/images/partner/badge_light.png', alt: 'Mobile Analytics'), "https://mixpanel.com/f/partner" %>
			</div>
			<div class="col-sm-3 section" id="digitalocean">
				<%= link_to image_tag('digitalocean-badge-white.png', alt: 'Digital Ocean Badge'), "https://www.digitalocean.com" %>
			</div>
	</div>
</div>

</body>
</html>
