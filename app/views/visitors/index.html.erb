<section>
<%= form_for :send_mail, :url => send_mail_path, :html => {:method => :post, :class => "col-md-4 col-md-offset-4"} do |f| %>
	<div class="input-group">
	  <span class="input-group-addon"><span class="glyphicon glyphicon-envelope"></span></span>
	  <%= f.text_field :email, :placeholder => "Email", :class => "form-control", :required => true %>
	</div>

	<div class="input-group">
	  <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
	  <%= f.text_field :first_name, :placeholder => "First Name", :class => "form-control", :required => true %>
	  <%= f.text_field :last_name, :placeholder => "Last Name", :class => "form-control", :required => true %>
	</div>

	<div class="input-group">
	  <span class="input-group-addon">#</span>
	  <%= f.number_field :team, :placeholder => "Team", :class => "form-control", :required => true %>
	</div>
	 <%= f.submit "Register", :class => "btn btn-success pull-right" %>
<% end %>
</section>

